<h1>RailsBridgeCorp Open Jobs</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @jobs.each do |job| %>
  <tr>
    <td><%= job.title %></td>
    <td><%= job.description %></td>
    <td><%= link_to "Show", job %></td>
    <td><%= link_to "Edit", edit_job_path(job) %></td>
    <td><%= link_to "Remove", job, method: :delete, data: { confirm: "Are you sure?" } %></td>
  </tr>
<% end %>
</table>
